<%- include header.ejs %>
<div class="main-wrapper">
    <div class="header-container">
        <input id="main-search" class="form-control search-bar" placeholder="Írj be valamit a kereséshez!">
        <a href="/performers" class="btn btn-default header-btn pull-right">Előadók megtekintése</a>
        <button type="button" data-toggle="modal" data-target="#addSongModal" class="btn btn-default header-btn pull-right">Dal hozzáadása</button>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Előadó</th>
                    <th>Cím</th>
                    <th>Hossz</th>
                    <th>Műfaj</th>
                    <th>Év</th>
                </tr>
            </thead>

            <tbody>
            <% songs.forEach(function(song) { %>
            <tr>
                <td class="clickable" data-toggle="modal" data-target="#editPerformerModal"><%= song.performer %></td>
                <td class="clickable" data-toggle="modal" data-target="#editSongModal"><%= song.title %></td>
                <td><%= song.length %></td>
                <td><%= song.genre %></td>
                <td><%= song.year %></td>
            </tr>
            <% }); %>
            </tbody>

        </table>
    </div>
</div>

<!-- modalok -->
<%- include editAuthor.ejs %>
<%- include addSong.ejs %>
<%- include editSong.ejs %>

