<%- include header.ejs %>
<div class="main-wrapper">
    <div class="header-container">
        <input id="main-search" class="form-control search-bar" placeholder="Írj be valamit a kereséshez!">
        <a href="/performers" class="btn btn-default header-btn pull-right">Előadók megtekintése</a>
        <a href="/add-song" type="button" data-toggle="modal" data-target="#modal" class="btn btn-default header-btn pull-right">Dal hozzáadása</a>
    </div>
    <%if(songs != false) {%>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Előadó</th>
                    <th>Cím</th>
                    <th>Hossz</th>
                    <th>Műfaj</th>
                    <th>Év</th>
                </tr>
            </thead>

            <tbody>
            <%songs.forEach(function(song) { %>
            <tr>
                <td class="clickable" href="/edit-author/<%=song.author.split(' ').join('%20')%>" data-toggle="modal" data-target="#modal"><%= song.author %></td>
                <td class="clickable" href="/edit-song/<%=song._id%>" data-toggle="modal" data-target="#modal"><%= song.title %></td>
                <td><%= song.length %></td>
                <td><%= song.genre %></td>
                <td><%= song.year %></td>
            </tr>
            <%});%>
            </tbody>

        </table>
    </div>
    <% } else {
    %>
    <br/>
    <div class="alert alert-danger"> Nincs adat! </div>
    <% } %>
    </div>

<%- include modalFrame.ejs %>

<a href="/login" class="login-sticky btn btn-primary">Jelentkezz be!</a>
<%- include footer.ejs %>