<%- include header.ejs %>
    <div class="main-wrapper main-wrapper--login">
        <a href="/"><h2>Főoldal</h2></a>
        <h1>Regisztráció</h1>
        <form method="POST" action="/register">
            <input type="email" class="form-control" id="user-name" name="email" placeholder="Felhasználónév" />
            <input type="password" class="form-control" id="password" name="password" placeholder="Jelszó" />
            <div class="btn-container">
                <input type="submit" class="btn btn-primary pull-right" value="Regisztráció" />
                <a href="/login" class="btn btn-default">Bejelentkezés &raquo;</a>
            </div>
        </form>
    </div>
<%- include footer.ejs %>