<%- include header.ejs %>
<div class="main-wrapper">

    <h1>Előadók</h1>

    <div class="header-container text-center">
        <input id="main-search" class="form-control search-bar" placeholder="Írj be valamit a kereséshez!">
        <a href="/performers" class="btn btn-default header-btn pull-left no-left-margin">&laquo; Vissza</a>
        <button type="button" data-toggle="modal" data-target="#addSongModal" class="btn btn-default header-btn pull-right">Dal hozzáadása</button>
        <a href="/" class="btn btn-default header-btn pull-right">Főoldal</a>
    </div>

    <div class="table-responsive performers-table">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Cím</th>
                <th>Hossz</th>
                <th>Műfaj</th>
                <th>Év</th>
            </tr>
            </thead>

            <tbody>
            <% songs.forEach(function(song) { %>
            <tr class="clickable" data-toggle="modal" data-target="#editSongModal">
                <td><%= song.title %></td>
                <td><%= song.length %></td>
                <td><%= song.genre %></td>
                <td><%= song.year %></td>
            </tr>
            <% }); %>
            </tbody>

        </table>
    </div>
</div>

<%- include addSong.ejs %>
<%- include editSong.ejs %>

<a href="/login" class="login-sticky btn btn-primary">Jelentkezz be!</a>

<%- include footer.ejs %>>