<%- include header.ejs %>
<div class="main-wrapper">

    <h1>Előadók</h1>

    <div class="header-container text-center">
        <input id="main-search" class="form-control search-bar" placeholder="Írj be valamit a kereséshez!">
        <a href="/" class="btn btn-default header-btn pull-left no-left-margin">&laquo; Vissza</a>
        <a href="/add-author" type="button" data-toggle="modal" data-target="#modal" class="btn btn-default header-btn pull-right">Előadó hozzáadása</a>
    </div>

    <div class="table-responsive performers-table">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Név</th>
                <th>Dalok száma</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            <% performers.forEach(function(performer) { %>
            <tr>
                <td class="clickable" href="/edit-author" data-toggle="modal" data-target="#modal"><%= performer.name %></td>
                <td class="clickable" href="/edit-author" data-toggle="modal" data-target="#modal"><%= performer.count %></td>
                <td><a href="/songs" class="btn btn-default btn-next">&raquo;</a></td>
            </tr>
            <% }); %>
            </tbody>

        </table>
    </div>
</div>

<%- include modalFrame.ejs %>

<a href="/login" class="login-sticky btn btn-primary">Jelentkezz be!</a>
<%- include footer.ejs %>